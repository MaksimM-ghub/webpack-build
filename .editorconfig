# EditorConfig configuration file
# http://editorconfig.org

# Индикатор базового стиля
root = true

# Настройки по умолчанию для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Настройки для markdown файлов
[*.md]
trim_trailing_whitespace = false

# Настройки для JSON файлов
[*.json]
indent_size = 2


# Настройки для HTML файлов
[*.html]
indent_size = 2

# Настройки для CSS файлов
[*.css, *.scss]
indent_size = 2

# Настройки для JavaScript и JSX файлов
[*.js, *.jsx]
indent_size = 2

# Настройки для TypeScript и TSX файлов
[*.ts, *.tsx]
indent_size = 2
